<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:paddingTop="?attr/actionBarSize"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/android:colorBackground"
    android:fitsSystemWindows="true"
    tools:context=".StatisticsActivity">

    <!-- App Bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:navigationIcon="@drawable/ic_close"
            app:navigationIconTint="?attr/colorOnPrimary"
            app:title="Statistics"
            app:titleTextColor="?attr/colorOnPrimary" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Period Toggle -->
    <RadioGroup
        android:id="@+id/toggle_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="horizontal"
        android:gravity="center">

        <RadioButton
            android:id="@+id/radio_daily"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Daily" />

        <RadioButton
            android:id="@+id/radio_monthly"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Monthly"
            android:checked="true" />

        <RadioButton
            android:id="@+id/radio_yearly"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Yearly" />
    </RadioGroup>

    <!-- Chart Title -->
    <TextView
        android:id="@+id/chart_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:text="Expense Breakdown"
        android:textSize="18sp"
        android:textStyle="bold" />


    <!-- Charts and Ranking Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_margin="8dp">

        <!-- Pie Chart -->
        <LinearLayout
            android:id="@+id/chartContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="16dp">

            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/pie_chart"
                android:layout_width="match_parent"
                android:layout_height="260dp" />

        </LinearLayout>


        <!-- Category Ranking List -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/categoryRankingList"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="8dp" />
    </LinearLayout>

    <!-- Trends Chart Title -->
    <TextView
        android:id="@+id/trendsChartTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Category Trends"
        android:textSize="14sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <!-- Trends Chart (Line Chart for month-to-month) -->
    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/trendsChart"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="8dp"
        android:visibility="visible" />

    <!-- Total Expenses -->
    <TextView
        android:id="@+id/total_expenses_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="?attr/colorNegative"
        android:visibility="visible"
        tools:visibility="visible" />

</LinearLayout>
